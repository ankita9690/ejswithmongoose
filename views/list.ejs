<%- include("header") -%>

    <div class="box" id="heading">
      <h1><%= title %></h1>
    </div>
    <div class="box">

      <% listitem.forEach(function(elements){ %>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkboxname" onchange="this.form.submit()" value="<%=elements._id%>">
            <p><%=elements.name%></p>
          </div>
          <input type="hidden" name="listname" value="<%=title%>"></input>
        </form>
      <% }); %>

        <form class="item" action="/" method="post">
          <input type="text" name="newitemname" placeholder="new item" autocomplete="off">
          <button type="submit" name="buttonlist" value=<%=title %>>+</button>
        </form>
    </div>

<%- include("footer") -%>
